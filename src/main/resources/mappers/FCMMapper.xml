<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smartfarm.chameleon.domain.fcm.dao.FCMMapper">

    <!-- 사용자 아이디로 FCM 토큰 조회 -->
    <select id="get_fcm_token"
        parameterType="java.lang.String"
        resultType="java.lang.String">

        SELECT 
            device_token
        FROM 
            user
        WHERE 
            user_id = #{user_id};    

    </select>

    <!-- 사용자 Device Token 값 추가 -->
    <insert id="update_device_token"
        parameterType="com.smartfarm.chameleon.domain.fcm.dto.FCMTokenDTO">

        UPDATE user
        SET
            device_token = #{device_token}
        WHERE
            user_id = #{user_id}

    </insert>

</mapper>
